<!-- articles.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=articles.title %></title>
    <link rel="stylesheet" href="stylesheet/styles.css">
</head>
<body class="bg-gray-100">

    <nav class="bg-gray-800 p-4">
        <div class="container mx-auto">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <img src="\images\logo.png" alt='Logo' class='w-16 h-16 mr-2 rounded-full shadow-lg'/>
                    <div class="text-white text-3xl font-bold">Connect</div>
                </div>
                <ul class="flex space-x-4">
                    <li>
                        <a href="/" class="text-white hover:underline">Home</a>
                    </li>
                    <li>
                        <a href="/" class="text-white hover:underline">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
<div class="container">
<h1 class="mb-4">Articles</h1>
<a href="/new-article" class="btn btn-success">New Article</a>
<a href="/" class="btn btn-primary">Home</a> <!-- Home button -->

<% articles.reverse().forEach(article=>{ %>
<div class="card mt-4">
    <div class="card-body">
        <h4 class="card-title"> <%= article.title %></h4>
        <div class="card-text mb-2">
            <%= truncateText(article.body, 100) %> <!-- Truncate text to 100 characters -->
        </div>
        <a href="/article/<%= article._id %>" class="btn btn-primary">Read More</a>
    </div>
</div>
<% })%>
</div>

<% function truncateText(text, maxLength) { %>
    <% if (text.length > maxLength) { %>
        <%= text.substring(0, maxLength) + '...' %>
    <% } else { %>
        <%= text %>
    <% } %>
<% } %>

</body>
</html>